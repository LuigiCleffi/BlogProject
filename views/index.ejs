<%- include('./partials/header') %>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
            <h1>Perguntas</h1>
            <a href="/perguntar" class="btn btn-secondary h-25">Perguntar</a>
        </div>
        <hr>

        <% perguntas.map(pergunta=> { %>

            <article class="card mb-3">
                <div class="card-body">
                    <h3>
                        <%=pergunta.titulo%>
                    </h3>
                </div>
                <div class="card-footer">
                    <a class="btn btn-dark" href="/pergunta/<%=pergunta.id%>">responder</a>

                </div>
            </article>
            <%})%>

    </div>

    <%- include("./partials/footer") %>