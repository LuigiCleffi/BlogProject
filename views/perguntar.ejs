<%- include('./partials/header') %>

    <div class="container">
        <div class="card border-0" id="formulario-pergunta">
            <div class="card-header">
                <h3 class="mb-3">Realizar Pergunta</h3>
            </div>
            <div class="card-body">
                <form action="/salvarPergunta" method="POST">
                    <label for="">Título</label>
                    <input class="form-control" placeholder="Título" name="pergunta" type="text">
                    <label for="">Descrição</label>
                    <textarea name="descricao_pergunta" placeholder="Descreva sua pergunta aqui"
                        class="form-control"></textarea>
                    <button type="submit" class="btn btn-dark mt-4">Perguntar</button>
                </form>
            </div>
        </div>
    </div>

        <%- include("./partials/footer") %>